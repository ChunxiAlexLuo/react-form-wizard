apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{name}}
  namespace: {{namespace}}
  labels:
    {{#each labels}}
      {{@key}}={{this}}
    {{/each}}
spec:
  replicas: {{replicas}}
  selector:
    matchLabels:
      app: {{name}}
  template:
    metadata:
      labels:
        app: {{name}}
    spec:
      containers:
      {{#each containers}}
      - name: {{name}}
        image: {{image}}
        ports:
        {{#each ports}}
        - containerPort: {{containerPort}}
        {{/each}}
      {{/each}}
